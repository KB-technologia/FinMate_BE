<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.finmate.member.mapper.UserMapper">


<insert id="insertUser" parameterType="org.finmate.member.domain.UserVO">
        INSERT INTO user (name, account_id, email, password, birth, provider)
        VALUES (#{name}, #{accountId}, #{email}, #{password}, #{birth}, #{provider})
    </insert>
    <delete id="deleteByAccountId" parameterType="String">
        DELETE FROM user WHERE account_id = #{accountId}
    </delete>
    <select id="selectByAccountId" resultType="org.finmate.member.domain.UserVO">
        SELECT *
        FROM user
        WHERE account_id = #{accountId}
    </select>

    <select id="findUserIdByAccountId" resultType="long">
        SELECT id FROM user WHERE account_id = #{accountId}
    </select>

    <delete id="deleteUserInfoByUserId">
        DELETE FROM user_info WHERE user_id = #{userId}
    </delete>

    <delete id="deleteUserAttendanceByUserId">
        DELETE FROM user_attendance WHERE user_id = #{userId}
    </delete>

    <delete id="deleteUserById">
        DELETE FROM user WHERE id = #{userId}
    </delete>

    <select id="existsByAccountId" resultType="boolean">
        SELECT COUNT(*) > 0 FROM user WHERE account_id = #{accountId}
    </select>

</mapper>
